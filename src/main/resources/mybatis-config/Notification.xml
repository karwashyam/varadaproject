<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.webapp.daos.NotificationDao">

	<resultMap id="userResultMap" type="map" >
		<result property="text" column="text" />
		<result property="notificationDate" column="created_at" />
	</resultMap>
	
	<insert id="addNotification" useGeneratedKeys="false">
		INSERT INTO notifications(
            notification_id, text, created_at)
    	VALUES (#{notificationId}, #{text}, #{createdAt});
	</insert>
	
	<select id="getNotification" resultMap="userResultMap">
		SELECT text,created_at FROM notifications 
	</select>
			
	
</mapper> 